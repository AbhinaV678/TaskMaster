<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(x => { %>
      <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="deletedItem" value="<%= x._id %>" onChange="this.form.submit()">
        <p><%=  x.itemName  %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>">
    </form>

    <form class="item edited" action="/update" method="post">
      <div class="item">
        <input type="text" name="editedItem" placeholder="Update Task" autocomplete="off">
        <button class="editButton" type="submit" name="edit" value="<%= x._id %>">save</button>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>">
    </form>
      <% }); %>
      
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Add New Task" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
